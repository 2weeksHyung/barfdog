{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@util/*": ["util/*"],
      "@api/*": ["api/*"],
      "@store/*": ["store/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/index.jsx",
    "src/pages/_document.jsx",
    "src/components/admin/AdminHeader.jsx",
    "src/components/admin/AdminHeader.jsx",
    "src/components/admin/AdminWrapper.tsx",
    "src/pages/bf-admin/banner/main-banner/index.jsx",
    "src/pages/bf-admin/banner/main-banner/create.jsx",
    "src/pages/_app.jsx",
    "src/components/mypage/Dashboard.jsx"
  ],
  "exclude": ["node_modules", "trash"]
}
